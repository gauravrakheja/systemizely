<div class="mt-4 mb-4 d-flex justify-content-center top_banner_form">
  <%= render "form", house: House.new, inline: false %>
</div>

<ul class="list-group">
  <% @houses.each do |house| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to house.name, house_path(house) %>
      <span>
        created by: <%= house.owner.email %> |
        <%= house.house_members.size %> Members
      </span>
    </li>
  <% end %>
</ul>